@page "/register"
@using ImageCompressor.Web.Auth
@inject AuthService AuthService
@inject NavigationManager NavManager
@rendermode InteractiveServer

<PageTitle>Kayıt Ol</PageTitle>

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="glass-card fade-in-up" style="width: 100%; max-width: 500px;">
        @* Genişliği biraz artırdım *@
        <div class="text-center mb-4">
            <i class="bi bi-person-plus display-4 text-success"></i>
            <h3 class="mt-3">Hesap Oluştur</h3>
        </div>

        @* --- YENİ ALANLAR --- *@
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Ad</label>
                <input @bind="user.FirstName" class="form-control bg-dark text-white border-secondary" placeholder="Adınız" />
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Soyad</label>
                <input @bind="user.LastName" class="form-control bg-dark text-white border-secondary" placeholder="Soyadınız" />
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">E-Posta</label>
            <input @bind="user.Email" type="email" class="form-control bg-dark text-white border-secondary" placeholder="ornek@gmail.com" />
        </div>
        @* -------------------- *@

        <div class="mb-3">
            <label class="form-label">Kullanıcı Adı</label>
            <input @bind="user.Username" class="form-control bg-dark text-white border-secondary" placeholder="Kullanıcı Adınız" />
        </div>
        <div class="mb-3">
            <label class="form-label">Şifre</label>
            <input @bind="user.Password" type="password" class="form-control bg-dark text-white border-secondary" placeholder="*********" />
        </div>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert @(isSuccess ? "alert-success" : "alert-danger") py-2 small">@message</div>
        }

        <button class="btn btn-success w-100 mt-3" @onclick="HandleRegister">
            Kayıt Ol
        </button>

        <div class="text-center mt-3">
            <small class="text-muted">Zaten üye misin? <a href="login" class="text-decoration-none text-white">Giriş Yap</a></small>
        </div>
    </div>
</div>

@code {
    private UserAccount user = new();
    private string message = "";
    private bool isSuccess = false;

    private void HandleRegister()
    {
        // Kontrolü yeni alanları da kapsayacak şekilde genişletiyoruz
        if (string.IsNullOrWhiteSpace(user.Username) ||
            string.IsNullOrWhiteSpace(user.Password) ||
            string.IsNullOrWhiteSpace(user.FirstName) ||
            string.IsNullOrWhiteSpace(user.LastName) ||
            string.IsNullOrWhiteSpace(user.Email))
        {
            message = "Lütfen tüm alanları doldurunuz!";
            isSuccess = false;
            return;
        }

        // Email format kontrolü (Basit)
        if (!user.Email.Contains("@"))
        {
            message = "Geçerli bir e-posta adresi giriniz.";
            isSuccess = false;
            return;
        }

        if (AuthService.Register(user))
        {
            message = "Kayıt başarılı! Giriş yapabilirsiniz.";
            isSuccess = true;
            Task.Delay(2000).ContinueWith(_ => NavManager.NavigateTo("login"));
        }
        else
        {
            message = "Bu kullanıcı adı zaten alınmış.";
            isSuccess = false;
        }
    }
}