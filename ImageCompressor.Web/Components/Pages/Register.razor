@page "/register"
@using ImageCompressor.Web.Auth
@inject AuthService AuthService
@inject NavigationManager NavManager
@rendermode InteractiveServer

<PageTitle>Kayıt Ol</PageTitle>

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="glass-card fade-in-up" style="width: 100%; max-width: 400px;">
        <div class="text-center mb-4">
            <i class="bi bi-person-plus display-4 text-success"></i>
            <h3 class="mt-3">Hesap Oluştur</h3>
        </div>

        <div class="mb-3">
            <label class="form-label">Kullanıcı Adı</label>
            <input @bind="user.Username" class="form-control bg-dark text-white border-secondary" />
        </div>
        <div class="mb-3">
            <label class="form-label">Şifre</label>
            <input @bind="user.Password" type="password" class="form-control bg-dark text-white border-secondary" />
        </div>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert @(isSuccess ? "alert-success" : "alert-danger") py-2 small">@message</div>
        }

        <button class="btn btn-success w-100 mt-3" @onclick="HandleRegister">
            Kayıt Ol
        </button>

        <div class="text-center mt-3">
            <small class="text-muted">Zaten üye misin? <a href="login" class="text-decoration-none text-white">Giriş Yap</a></small>
        </div>
    </div>
</div>

@code {
    private UserAccount user = new();
    private string message = "";
    private bool isSuccess = false;

    private void HandleRegister()
    {
        if (string.IsNullOrWhiteSpace(user.Username) || string.IsNullOrWhiteSpace(user.Password))
        {
            message = "Alanlar boş olamaz!";
            isSuccess = false;
            return;
        }

        if (AuthService.Register(user))
        {
            message = "Kayıt başarılı! Giriş yapabilirsiniz.";
            isSuccess = true;
            // 2 saniye sonra login'e yönlendir
            Task.Delay(2000).ContinueWith(_ => NavManager.NavigateTo("login"));
        }
        else
        {
            message = "Bu kullanıcı adı zaten alınmış.";
            isSuccess = false;
        }
    }
}